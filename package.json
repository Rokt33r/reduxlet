{
  "name": "reduxlet",
  "version": "0.1.0",
  "description": "A small container component with an isolated Redux store",
  "main": "lib/reduxlet.js",
  "module": "es/reduxlet.js",
  "jsnext:main": "es/reduxlet.js",
  "scripts": {
    "start": "webpack-dev-server --config ./examples/webpack.config.js",
    "build": "NODE_ENV=production rollup -c rollup.config.js",
    "pretest": "npm run lint --quite",
    "test": "jest --coverage",
    "test:quick": "jest",
    "test:watch": "jest --watch",
    "lint": "standard",
    "clean": "rm -Rf es lib dist",
    "prepublish": "npm run test && npm run clean && npm run build --quite"
  },
  "keywords": [
    "react",
    "redux",
    "flux"
  ],
  "author": "Junyoung Choi <fluke8259@gmail.com>",
  "license": "ISC",
  "files": [
    "dist/reduxlet.js",
    "es/reduxlet.js",
    "lib/reduxlet.js"
  ],
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-saga": "^0.15.3",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "standard": "^10.0.2",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "peerDependencies": {
    "react": "^15.0.0-0 || ^16.0.0-0",
    "redux": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "jest": true
    }
  }
}
